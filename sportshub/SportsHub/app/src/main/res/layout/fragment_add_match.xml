<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vyberte sport"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"/>

        <TextView
            android:id="@+id/tvSelectedDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游늰 Vyberte datum a 캜as"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSelectDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zm캩nit datum a 캜as"
            android:layout_marginBottom="24dp"/>

        <!-- Pole pro t칳mov칳 z치pas -->
        <LinearLayout
            android:id="@+id/layoutTeamFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etHomeTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dom치c칤 t칳m"
                android:inputType="textCapWords"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etHomeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Barva dom치c칤ch (HEX nap콏. #FF0000)"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etAwayTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hostuj칤c칤 t칳m"
                android:inputType="textCapWords"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAwayColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Barva host콢 (HEX nap콏. #0000FF)"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etMatchDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="P콏edpokl치dan치 d칠lka z치pasu (minuty)"
                android:inputType="number"
                android:text="90"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <!-- Pole pro individu치ln칤 sport -->
        <LinearLayout
            android:id="@+id/layoutIndividualFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Trv치n칤 (minut)"
                android:inputType="number"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pozn치mka"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ulo쬴t z치pas"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
